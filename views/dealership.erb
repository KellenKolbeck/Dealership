<h1><%= @dealership.name() %></h1>

<ul>
  <% @dealership.show_vehicles().each() do |cars| %>
  <li><%= cars.unique_vehicle() %></li>
  <% end %>
</ul>

<h3>Add a new vehicle</h3>
<form action="/vehicles" method="post">
  <input id="dealership_id" name="dealership_id" type="hidden" value="<%= @dealership.id() %>">
  <select name="make" class="form-control">
      <% @car_manufacturers.each() do |make| %>
      <option><%= make %></option>
      <% end %>
  </select>
  <div class="form-group">
    <label for="model">Model:</label>
    <input type="text" name="model" class="form-control">
  </div>
  <div class="form-group">
    <label for="year">Year:</label>
    <input type="text" name="year" class="form-control">
  </div>
  <button type="submit" class="btn-danger">Submit</button>
  <a href="/">Go back</a>
</form>
